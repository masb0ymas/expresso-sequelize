{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es6",
    "lib": ["es5", "es6"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@expresso/*": ["@expresso/*"],
      "@config/*": ["config/*"],
      "@controllers/*": ["controllers/*"],
      "@database/*": ["database/*"],
      "@jobs/*": ["jobs/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"],
      "@views/*": ["views/*"],
    },
    "typeRoots": ["./src/types"],

    /* JavaScript Support */
    "allowJs": true,

    /* Emit */
    "outDir": "./dist",
    "downlevelIteration": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "strictPropertyInitialization": false,

    /* Completeness */
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
